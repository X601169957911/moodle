{{!
    @template block_recentcourses/main

    This template renders the main content area for the reentcourses block.

    Example context (json):
    {}
}}

<div id="block-recent-courses-{{uniqid}}" class="block-recent-courses" data-region="recent-courses" data-userid="{{userid}}">
    <div class="container-fluid p-0">
        {{> block_recentcourses/recent-courses-view }}
    </div>
</div>
{{#js}}
require(
[
    'jquery',
    'block_recentcourses/main'
],
function(
    $,
    Main
) {
    var root = $('#block-recent-courses-{{uniqid}}');
    var userid = root.attr('data-userid');

    Main.init(userid, root);
});
{{/js}}