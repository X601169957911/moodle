{{!
    @template core_courseformat/local/content/cm

    Displays a course module instance inside a course section.

    Example context (json):
    {
        "activityname": "Hello kitty forum",
        "modname": "Forum",
        "hasname": "true",
        "hasurl": "true",
        "editing": "false",
        "menuitems": [
            {
                "name": "Add activity below",
                "action": "addbelow",
                "icon": "<i class=\"icon fa fa-plus\"></i>"
            },
            {
                "name": "Move to",
                "action": "move",
                "icon": "<i class=\"icon fa fa-chevron-right\"></i>"
            },
            {
                "name": "Delete",
                "action": "delete",
                "icon": "<i class=\"icon fa fa-trash\"></i>"
            },
            {
                "name": "Settings",
                "action": "settings",
                "icon": "<i class=\"icon fa fa-cog\"></i>"
            }
        ],
        "icon": "http://placekitten.com/50/50",
        "afterlink": "<span class=\"badge badge-primary\">30 unread messages</span>",
        "altcontent": "Suspendisse condimentum non ipsum ut ultrices. Praesent in ipsum ac ex rutrum varius gravida quis est. Vestibulum elit ante, vestibulum vel varius non, congue in velit. Vivamus posuere efficitur magna, in faucibus lacus bibendum non. Nullam non tempus tortor.",
        "activityinfo": {
            "activityname": "Course announcements",
            "hascompletion": true,
            "uservisible": true,
            "hasdates": true,
            "isautomatic": true,
            "istrackeduser": true,
            "showmanualcompletion": true,
            "activitydates": [
                {
                    "label": "Opens:",
                    "datestring": "6 April 2021, 6:46 PM"
                }
            ],
            "completiondetails": [
                {
                    "statuscomplete": 1,
                    "description": "Viewed"
                },
                {
                    "statusincomplete": 1,
                    "description": "Receive a grade"
                }
            ]
        },
        "availability": "<div><span class=\"badge badge-info\">Restricted</span> Available from <strong>3 Dec 2029</strong></div>"
    }
}}
<div class="activity-item p-3 mb-3 {{#editing}}editing{{/editing}}" draggable="{{#editing}}true{{/editing}}">
    {{! Display the link to the module (or do nothing if module has no url). }}
    {{#hasname}}
        <div class="d-flex align-items-center">
            <div class="media align-items-center">
                <img src="{{{icon}}}" class="align-self-center mr-2" alt="{{{modname}}} icon">
                <div class="media-body">
                    <div class="text-uppercase small">
                        {{{modname}}}
                    </div>
                    <div class="activityname">
                        {{#hasurl}}<a href="{{{url}}}">{{{activityname}}}</a>{{/hasurl}}
                        {{^hasurl}}{{{activityname}}}{{/hasurl}}
                    </div>
                </div>
            </div>
            {{#editing}}
                <div class="activity-actions ml-auto">
                    {{>tool_componentlibrary/activity-menu}}
                </div>
            {{/editing}}
        </div>
        {{#afterlink}}
            <div class="afterlink my-1">{{{afterlink}}}</div>
        {{/afterlink}}

        {{#activityinfo}}
            <div class="activity-info my-2">
                {{> core_course/activity_info}}
            </div>
        {{/activityinfo}}

        {{#availability}}
            <div class="activity-availability mb-2">
                {{{availability}}}
            </div>
        {{/availability}}
    {{/hasname}}

    <div class="d-flex align-items-center">
        <div class="altcontent">
            {{{altcontent}}}
        </div>
        {{^hasname}}
            {{#editing}}
                <div class="activity-actions ml-auto">
                   {{>tool_componentlibrary/activity-menu}}
                </div>
            {{/editing}}
        {{/hasname}}
    </div>

    {{^hasname}}
        {{#activityinfo}}
            <div class="activity-info my-2">
                {{> core_course/activity_info}}
            </div>
        {{/activityinfo}}

        {{#availability}}
            <div class="activity-availability mb-2">
                {{{availability}}}
            </div>
        {{/availability}}
    {{/hasname}}
</div>
