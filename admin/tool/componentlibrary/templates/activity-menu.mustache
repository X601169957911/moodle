{{!
    @template tool_componentlibrary/activity-menu

    Displays a course module instance inside a course section.

    Example context (json):
    {
        "menuitems": [
            {
                "name": "Add activity below",
                "action": "addbelow",
                "icon": "<i class=\"icon fa fa-plus\"></i>"
            },
            {
                "name": "Move to",
                "action": "move",
                "icon": "<i class=\"icon fa fa-chevron-right\"></i>"
            },
            {
                "name": "Delete",
                "action": "delete",
                "icon": "<i class=\"icon fa fa-trash\"></i>"
            },
            {
                "name": "Settings",
                "action": "settings",
                "icon": "<i class=\"icon fa fa-cog\"></i>"
            }
        ]
    }
}}
<div class="ml-auto dropdown">
    <button id="activity-actions-menu-button-{{uniqid}}" class="btn btn-link btn-icon icon-no-margin icon-size-3"
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
    aria-label="Activity Menu" aria-controls="activity-actions-menu">
        {{#pix}} i/menu, core {{/pix}}
    </button>
    <div id="activity-actions-menu" class="dropdown-menu dropdown-menu-right" role="menu"
    aria-labelledby="activity-actions-menu-button-{{uniqid}}">
        {{#menuitems}}
        <a class="dropdown-item" href="#" data-action="{{action}}" role="menuitem">
            {{{icon}}} {{name}}
        </a>
        {{/menuitems}}
    </div>
</div>
