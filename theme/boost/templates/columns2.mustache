{{!
    @template theme_boost/columns2

    Admin time setting template.

    Boost 2 column layout template.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
    * sidepreblocks - HTML for the blocks
    * hasblocks - true if there are blocks on this page
    * navdraweropen - true if the nav drawer should be open on page load
    * regionmainsettingsmenu - HTML for the region main settings menu
    * hasregionmainsettingsmenu - There is a region main settings menu on this page.

    Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         },
        "bodyattributes":"",
        "sidepreblocks": "<h2>Blocks html goes here</h2>",
        "hasblocks":true,
        "navdraweropen":true,
        "regionmainsettingsmenu": "",
        "hasregionmainsettingsmenu": false
    }
}}
{{> theme_boost/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}

<div id="page-wrapper" class="d-print-block">

    {{{ output.standard_top_of_body_html }}}

    {{> theme_boost/navbar }}

    <div class="d-flex drawercontrolbuttons">
        <div class="ml-auto mr-3 buttons">

        </div>
    </div>

    {{#courseindex}}
        <div data-region="courseindex" class="courseindex col-md-3 scroller {{#navdraweropen}}open{{/navdraweropen}}">
            <div class="d-flex">
                <button class="btn ml-auto regiontoggle {{#navdraweropen}}open{{/navdraweropen}}" data-action="toggleindex" style="z-index: 10000;">
                {{#pix}}e/cancel, core{{/pix}}
                </button>
            </div>
            <div class="mb-3">Course index</div>
            {{{courseindex}}}
        </div>
    {{/courseindex}}

    <div id="page" data-region="mainpage" class="scroller {{#hasblocks}}hasblocks {{#blockdraweropen}}blocksshown{{/blockdraweropen}}{{/hasblocks}} {{#courseindex}}hascourseindex {{#navdraweropen}}indexshown{{/navdraweropen}}{{/courseindex}}">
        {{{ output.full_header }}}
        {{#secondarynavigation}}
            <nav id="secondarynavnav" class="mobiledropdown navbar navbar-light navbar-expand w-100 p-0 bg-white mb-3">
                {{{ secondarynavigation }}}
                {{/secondarynavigation}}
                <div class="togglecontainer">
                    {{#courseindex}}
                        <button class="btn regiontoggle courseindextoggle {{#navdraweropen}}open{{/navdraweropen}}" data-preference="drawer-open-nav" data-action="toggleindex">{{#pix}}e/align_left, core{{/pix}}</button>
                    {{/courseindex}}
                    {{#hasblocks}}
                        <button class="btn regiontoggle blockregiontoggle mr-1 {{#blockdraweropen}}open{{/blockdraweropen}}" data-preference="drawer-open-block" data-action="toggleblocks">{{#pix}}i/categoryevent, core{{/pix}}</button>
                    {{/hasblocks}}
                </div>
                {{#secondarynavigation}}
            </nav>
        {{/secondarynavigation}}

        <div id="navwatch" class="sticky-top"></div>
        <div id="page-content" class="pb-3 d-print-block">
            <div id="region-main-box" class="">
                <section id="region-main" aria-label="{{#str}}content{{/str}}">

                    {{{ output.course_content_header }}}
                    {{{ output.main_content }}}
                    {{{ output.activity_navigation }}}
                    {{{ output.course_content_footer }}}

                </section>
            </div>
        </div>
        {{> theme_boost/footer }}
    </div>
    {{#hasblocks}}
    <section data-region="blocks-column" class="d-print-none col-md-3 scroller blockdrawer {{#blockdraweropen}}open{{/blockdraweropen}}" aria-label="{{#str}}blocks{{/str}}">
        <div class="d-flex justify-content-end">
            <button class="btn ml-auto regiontoggle" data-action="toggleblocks" style="z-index: 10000;">
                {{#pix}}e/left_to_right, core{{/pix}}
            </button>
        </div>
        {{{ sidepreblocks }}}
    </section>
    {{/hasblocks}}

    {{{ output.standard_after_main_region_html }}}

</div>

</body>
</html>
{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader'], function() {
    M.util.js_complete('theme_boost/loader');
});

require(['theme_boost/primarynav'], function(primarynav) {
    primarynav.togglenavigation();
});

require(['theme_boost/navbar'], function(navbar) {
    navbar.autohidenav();
});

require(['jquery'], function($) {
    var small = $(document).width() < 768;

    function toggleIndex(close) {
        if (close) {
            $('[data-action="toggleindex"]').removeClass('open');
            $('[data-region="courseindex"]').removeClass('open');
            $('[data-region="mainpage"]').removeClass('indexshown');
        } else {
            $('[data-action="toggleindex"]').toggleClass('open');
            $('[data-region="courseindex"]').toggleClass('open');
            $('[data-region="mainpage"]').toggleClass('indexshown');
        }
        return $('[data-region="courseindex"]').hasClass('open');
    }

    function toggleBlocks(close) {
        if (close) {
            $('[data-action="toggleblocks"]').removeClass('open');
            $('[data-region="blocks-column"]').removeClass('open');
            $('[data-region="mainpage"]').removeClass('blocksshown');
        } else {
            $('[data-action="toggleblocks"]').toggleClass('open');
            $('[data-region="blocks-column"]').toggleClass('open');
            $('[data-region="mainpage"]').toggleClass('blocksshown');
        }
        window.dispatchEvent(new Event('resize'));
        return $('[data-region="blocks-column"]').hasClass('open');
    }

    $('[data-action="toggleindex"]').on('click', function() {
        var state = toggleIndex(false) ? 'true' : 'false';
        var body = $('body');
        if (!small) {
            M.util.set_user_preference('drawer-open-nav', state);
        }
        if (! body.hasClass('editing')) {
            toggleBlocks(true);
            M.util.set_user_preference('drawer-open-block', 'false');
        }
    });

    $('[data-action="toggleblocks"]').on('click', function() {
        var state = toggleBlocks(false) ? 'true' : 'false';
        var body = $('body');
        if (!small) {
            window.console.log(state);
            M.util.set_user_preference('drawer-open-block', state);
        }
        if (! body.hasClass('editing')) {
            toggleIndex(true);
            M.util.set_user_preference('drawer-open-nav', 'false');
        }
    });
    $('#editingswitch').on('change', function() {
        $(this).closest('form').submit();
    });
});
{{/js}}
