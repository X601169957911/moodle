<div class="{{$drawerclasses}}{{/drawerclasses}}" data-trigger="{{$drawertrigger}}{{/drawertrigger}}">
    <div class="drawerheader">
        {{$drawerheading}}{{/drawerheading}}
        <button class="btn drawertoggle icon-no-margin" data-action="closedrawer">
            {{#pix}}e/cancel, core{{/pix}}
        </button>
    </div>
    <div class="drawercontent nice-scroll">
        {{$drawercontent}}{{/drawercontent}}
    </div>
</div>
{{#js}}
require(['theme_boost/drawer'], function(drawer) {
    drawer.region('[data-trigger="{{$drawertrigger}}{{/drawertrigger}}"]', '[data-action="{{$drawertrigger}}{{/drawertrigger}}"]' );
});
{{/js}}
