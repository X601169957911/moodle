{{!
    @template theme_boost/mobile_menuitem

    A menuitem for a mobile navigation menu

    Example context (json):
    {}
}}
{{#secondarymoremenu}}
    <div class="secondarynavcontainer d-none d-md-block">
        {{{ secondarymoremenu }}}
    </div>
    <div class="secondary-drawer-toggle d-md-none">
        <button class="btn btn-primary" data-action="secondarynav">
            Secondary
        </button>
    </div>
    {{< theme_boost/drawer }}
        {{$drawertype}}drawer-md drawer-left{{/drawertype}}
        {{$drawertrigger}}secondarynav{{/drawertrigger}}
        {{$drawerheading}}
            {{# output.should_display_navbar_logo }}
                <span class="drawerlogo">
                    <img src="{{output.get_compact_logo_url}}" alt="{{sitename}}">
                </span>
            {{/ output.should_display_navbar_logo }}
            {{^ output.should_display_navbar_logo }}
                <span class="site-name">{{{ sitename }}}</span>
            {{/ output.should_display_navbar_logo }}
        {{/drawerheading}}
        {{$drawercontent}}
            {{> theme_boost/boost_navigation/secondarymobile }}
        {{/drawercontent}}
    {{/ theme_boost/drawer}}
{{/secondarymoremenu}}
