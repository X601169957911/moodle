{{!
    @template core_availability/availability_multiple_messages

    Renders the availability tree for course activties

    Example context (json):
    {
        "parentcontainer" : "123456",
        "items" : [
            {
                "showmorelink": 0,
                "abbreviate" : 0,
                "title": "You belong to Green Group"
            },
            {
                "showmorelink": 0,
                "abbreviate" : 0,
                "title": "You belong to Red Group"
            },
            {
                "showmorelink": 0,
                "abbreviate" : 0,
                "title": "You belong to Orange Group"
            },
            {
                "showmorelink": 0,
                "abbreviate" : 1,
                "title": "You belong to Pink Group"
            },
            {
                "showmorelink": 1
            },
            {
                "showmorelink": 0,
                "abbreviate" : 0,
                "title": "You belong to Red Group",
                "class": "d-none"
            }
        ]
    }
}}
{{{header}}}
<ul {{#parentcontainer}}id="availability-multiple-{{parentcontainer}}"{{/parentcontainer}}>
    {{#items}}
        {{^showmorelink}}
        <li class="{{class}}">
            {{#abbreviate}}
                <span class="d-none">{{{title}}}</span><span class="d-block">...</span>
            {{/abbreviate}}
            {{^abbreviate}}
                {{{title}}}
            {{/abbreviate}}
        </li>
        {{/showmorelink}}
        {{#showmorelink}}
            <a href="#" data-action="showmore" class="d-block showmore">Show more</a>
        {{/showmorelink}}
    {{/items}}
</ul>

{{#parentcontainer}}
    {{#js}}
    require(['core_availability/availability_more'], function(availabilityMore) {
        var container = document.getElementById('availability-multiple-{{parentcontainer}}');
        availabilityMore.init(container);
    });
    {{/js}}
{{/parentcontainer}}
